<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vijay.broadcastreceiver.MainActivity">

    <Button
        android:id="@+id/button1"
        android:text="manifest broadcast receiver"
        android:onClick="view_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button2"
        android:text="java broadcast receiver"
        android:onClick="view_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="custom intent broadcastReceiver"
        android:id="@+id/button3"
        android:onClick="view_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="local broadcast receiver"
        android:id="@+id/button4"
        android:onClick="view_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="ordered broadcast receiver"
        android:id="@+id/button5"
        android:onClick="view_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
